<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    <TextView android:id="@+id/TextView01" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="@string/msgLoadFile"
        android:layout_above="@+id/TextView02"
        android:layout_alignRight="@+id/about_button"
        android:layout_alignEnd="@+id/about_button"
        android:layout_marginBottom="10dp"></TextView>
    <Button
        android:layout_height="wrap_content" android:clickable="true" android:layout_width="fill_parent" android:id="@+id/loadDictionary" android:text="Load Dictionary"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/pbLoadDictionary"
        android:layout_centerHorizontal="true"></Button>

    <TextView android:layout_below="@+id/loadDictionary" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/txtUpdateStatus"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="40dp"></TextView>
    <ProgressBar
        android:layout_height="wrap_content" android:layout_width="fill_parent" android:indeterminate="false" android:id="@+id/pbLoadDictionary" style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_marginBottom="42dp"
        android:layout_above="@+id/UnloadDictionary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></ProgressBar>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Revert to Normal"
        android:id="@+id/UnloadDictionary"
        android:layout_alignTop="@+id/about_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:id="@+id/about_button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/pbLoadDictionary"
        android:layout_alignEnd="@+id/pbLoadDictionary"
        android:layout_marginBottom="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msgLoadFile2"
        android:id="@+id/TextView02"
        android:layout_above="@+id/textView"
        android:layout_alignRight="@+id/about_button"
        android:layout_alignEnd="@+id/about_button"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msgLoadFile3"
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/ic_launcher"
        android:layout_above="@+id/TextView01"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
